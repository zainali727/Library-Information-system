@model IEnumerable<WebApplication.Models.IssuedBookModel>

@{
    ViewData["Title"] = "Issued Books";
}

<h4>Issued Books</h4>

<table class="table table-hover">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IssuedTo.Email)
        </th>
        <th>
            Issued date
        </th>
        <th>
            Return date
        </th>
        <th>
            Fine (Â£)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssuedTo.Email)
            </td>
            <td>
                @item.IssuedDate.ToString("dd/MM/yyyy")
            </td>
            <td>
                @item.ReturnDate.ToString("dd/MM/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalculatedFine)
            </td>
            <td>
                <a asp-action="ReturnBook" asp-route-id="@item.Id" class="text-danger ml-1"
                   onclick="return confirm('Are you sure this book is returned?')">
                    <i class="fa fa-trash-alt fa-lg">Return book</i>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>